<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/cyan"
        android:gravity="center"
        android:textSize="32dp"
        ></TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:hint="@string/enter_deposit"
        android:inputType="number"
        android:id="@+id/editTextDeposit"
        ></EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:hint="@string/enter_ann_percentage"
        android:inputType="number"
        android:id="@+id/editTextAnnPercent"
        ></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:hint="@string/enter_deposit_term"
        android:inputType="number"
        android:id="@+id/editTextDepositTerm"
        ></EditText>

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/calculate"
        android:textColorHint="@color/white"
        android:textSize="20dp"


        ></Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/result"
        android:id="@+id/textViewResult"
        android:textSize="24dp"
        ></TextView>

</LinearLayout>